<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shu.mapper.CourseMapper">
    <resultMap id="courseMap" type="com.shu.pojo.Course">
        <id column="course_id" property="courseId"/>
        <result column="course_name" property="courseName"/>
        <result column="department_id" property="departmentId"/>
        <result column="credit" property="credit"/>
        <result column="exam_weight" property="examWeight"/>
        <result column="status" property="status"/>
        <association property="department" resultMap="com.shu.mapper.DepartmentMapper.departmentMap"/>
    </resultMap>

    <select id="searchCourses" resultMap="com.shu.mapper.CourseSearchDTOMapper.courseSearchResultMap">
        SELECT
            c.course_id,
            c.course_name,
            c.credit,
            c.exam_weight,
            d.department_name,
            c.status
        FROM course c
        LEFT JOIN department d ON c.department_id = d.department_id
        <where>
            <if test="courseId != null">
                AND c.course_id = #{courseId}
            </if>
            <if test="courseName != null and courseName != ''">
                AND c.course_name LIKE CONCAT('%', #{courseName}, '%')
            </if>
            <if test="credit != null">
                AND c.credit = #{credit}
            </if>
            <if test="departmentId != null">
                AND c.department_id = #{departmentId}
            </if>
            <if test="status != null and status != ''">
                AND c.status = #{status}
            </if>
        </where>
        ORDER BY c.course_id
    </select>

    <insert id="insert">
        INSERT INTO course (course_id, course_name, department_id, credit, exam_weight)
        VALUES (#{courseId}, #{courseName}, #{departmentId}, #{credit}, #{examWeight});
    </insert>

    <select id="selectByDepartment" resultType="com.shu.pojo.Course" resultMap="courseMap">
        SELECT * FROM course
        WHERE department_id = #{departmentId}
        AND status = '审核通过';
    </select>

</mapper> 